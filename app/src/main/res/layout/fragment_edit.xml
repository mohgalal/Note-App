<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.EditFragment">


    <EditText
        android:id="@+id/edit_title_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="80dp"
        android:ellipsize="end"
        android:hint="Enter Your Title..."
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_description_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:hint="Enter Your Description..."
        android:maxLines="8"
        app:layout_constraintEnd_toEndOf="@id/edit_title_et"
        app:layout_constraintStart_toStartOf="@id/edit_title_et"
        app:layout_constraintTop_toBottomOf="@id/edit_title_et" />

    <Button
        android:id="@+id/update_btn"
        app:layout_constraintStart_toStartOf="@id/edit_description_et"
        app:layout_constraintEnd_toEndOf="@id/edit_description_et"
        app:layout_constraintTop_toBottomOf="@id/edit_description_et"
        android:layout_marginTop="20dp"
        android:text="Update"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="#526BF8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>